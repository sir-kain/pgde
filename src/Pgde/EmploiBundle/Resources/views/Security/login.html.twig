        {#<input type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}"/>#}
        {#</form>#}

        <form class="form-horizontal" role="form" action="{{ path("fos_user_security_check") }}" method="post">
            {% if csrf_token %}
                <p>
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>
                </p>
            {% endif %}
            <p class="title">Se connecter</p>
            <div class="form-group">
                <label for="username" class="control-label sr-only">
                    {{ 'security.login.username'|trans }}
                </label>
                <div class="col-sm-12">
                    <div class="input-group">
                        <input autocomplete="username" value="{{ last_username }}" type="text"
                               placeholder="username" id="username" class="form-control" name="_username"
                               required="required">
                        <span class="input-group-addon"><i class="fa fa-user"></i></span>
                    </div>
                </div>
            </div>
            <label for="password" class="control-label sr-only">{{ 'security.login.password'|trans }}</label>
            <div class="form-group">
                <div class="col-sm-12">
                    <div class="input-group">
                        <input autocomplete="current-password" type="password" placeholder="password"
                               id="password" class="form-control" name="_password" required="required">
                        <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                    </div>
                </div>
            </div>
            <label class="fancy-checkbox">
                <input type="checkbox" id="remember_me" name="_remember_me" value="on">
                <span>{{ 'security.login.remember_me'|trans }}</span>
            </label>
            <input class="btn btn-custom-primary btn-lg btn-block btn-auth" type="submit" id="_submit"
                   name="_submit" value="{{ 'security.login.submit'|trans }}"/>
        </form>
    {% endblock fos_user_content %}