{% extends 'base.html.twig' %}

{% block demande_content %}
    <!-- WRAPPER -->
    <div id="wrapper" class="wrapper">
        <!-- TOP BAR -->
        {#{% block topbar %} {% endblock %}#}
        <!-- END TOP BAR -->
        <!-- LEFT SIDEBAR -->
        {% block sidebar %} {% endblock %}

        <!-- END LEFT SIDEBAR -->
        <!-- MAIN CONTENT WRAPPER -->
        <div id="main-content-wrapper" class="content-wrapper expanded-full">
            {% block big_menu %}
                {% include '@PgdeEmploi/partials/big_menu.html.twig' %}
            {% endblock %}
            <!-- top general alert -->
            {#{% block alert_message %}#}
                {#{% include '@PgdeEmploi/partials/alert_message.html.twig' %}#}
            {#{% endblock %}#}


            {% block second_menu %} {% endblock %}

            <!-- main -->
            <div class="content">
                <div class="main-content">
                    {% block body %}
                    {% endblock %}
                </div>
            </div>
            <!-- /main -->
            <!-- FOOTER -->
            <footer class="footer">
                Copyright © 2017 Ministére de la Fonction Publique, de la Rationnalisation des Effectifs et du Renouveau du Service Public - Tous droits réservé
            </footer>
            <!-- END FOOTER -->
        </div>
        <!-- END CONTENT WRAPPER -->
    </div>
    <!-- END WRAPPER -->
{% endblock %}